{
  "name": "gerdsenai-socrates",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-with-port.js",
    "dev:simple": "vite",
    "dev:port": "node scripts/dev-with-port.js --port",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "node scripts/dev-with-port.js --tauri",
    "tauri:build:macos": "tauri build --target universal-apple-darwin",
    "tauri:build:macos:intel": "tauri build --target x86_64-apple-darwin",
    "tauri:build:macos:silicon": "tauri build --target aarch64-apple-darwin",
    "port:find": "node scripts/port-utils.js find",
    "port:check": "node scripts/port-utils.js check",
    "port:kill": "node scripts/port-utils.js kill",
    "port:info": "node scripts/port-utils.js info",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:basic": "echo \"âœ… Basic validation: package.json valid, TypeScript compilation check...\" && npm run build",
    "test:integration": "echo \"Integration tests not yet implemented. Basic connection tests would go here.\"",
    "test:e2e": "echo \"End-to-end tests not yet implemented. Full application workflow tests would go here.\"",
    "lint": "eslint src/ --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "quality": "npm run lint && npm run format:check && npm run test:run",
    "quality:fix": "npm run lint:fix && npm run format && npm run test:run"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "axios": "^1.6.7",
    "chromadb": "^3.0.3",
    "date-fns": "^4.1.0",
    "ollama": "^0.5.16",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.24",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
