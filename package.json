{
  "name": "gerdsenai-socrates",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-with-port.js",
    "dev:simple": "vite",
    "dev:port": "node scripts/dev-with-port.js --port",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "node scripts/dev-with-port.js --tauri",
    "tauri:build:macos": "tauri build --target universal-apple-darwin",
    "tauri:build:macos:intel": "tauri build --target x86_64-apple-darwin",
    "tauri:build:macos:silicon": "tauri build --target aarch64-apple-darwin",
    "port:find": "node scripts/port-utils.js find",
    "port:check": "node scripts/port-utils.js check",
    "port:kill": "node scripts/port-utils.js kill",
    "port:info": "node scripts/port-utils.js info",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:basic": "echo \"âœ… Basic validation: package.json valid, TypeScript compilation check...\" && npm run build",
    "test:integration": "echo \"Integration tests not yet implemented. Basic connection tests would go here.\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "quality": "npm run lint && npm run format:check && npm run test:run",
    "quality:fix": "npm run lint:fix && npm run format && npm run test:run"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "axios": "^1.13.2",
    "chromadb": "^3.1.4",
    "date-fns": "^4.1.0",
    "ollama": "^0.6.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.1",
    "@playwright/test": "^1.49.0",
    "@tauri-apps/cli": "^2.9.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.10",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.21.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^15.14.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "rollup-plugin-visualizer": "^5.13.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vite": "^7.1.12",
    "vitest": "^3.2.4",
    "web-vitals": "^4.2.4"
  }
