{
  "name": "auto-coder-companion",
  "displayName": "Auto-Coder Companion",
  "description": "AI coding assistant that integrates with VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onCommand:auto-coder-companion.openAutoCoder",
    "onCommand:auto-coder-companion.analyzeCode",
    "onCommand:auto-coder-companion.analyzeRepository"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-coder-companion.openAutoCoder",
        "title": "Open Auto-Coder Companion"
      },
      {
        "command": "auto-coder-companion.analyzeCode",
        "title": "Analyze Code with Auto-Coder"
      },
      {
        "command": "auto-coder-companion.analyzeRepository",
        "title": "Analyze Repository with Auto-Coder"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "auto-coder-companion.analyzeCode",
          "group": "auto-coder",
          "when": "editorHasSelection"
        }
      ],
      "explorer/context": [
        {
          "command": "auto-coder-companion.analyzeRepository",
          "group": "auto-coder",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "auto-coder-companion",
          "title": "Auto-Coder",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "auto-coder-companion": [
        {
          "id": "auto-coder-chat",
          "name": "Chat"
        },
        {
          "id": "auto-coder-search",
          "name": "Search"
        },
        {
          "id": "auto-coder-rag",
          "name": "RAG"
        },
        {
          "id": "auto-coder-history",
          "name": "History"
        }
      ]
    },
    "configuration": {
      "title": "Auto-Coder Companion",
      "properties": {
        "auto-coder-companion.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL of the Ollama server"
        },
        "auto-coder-companion.searxngUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "URL of the SearXNG server"
        },
        "auto-coder-companion.defaultModel": {
          "type": "string",
          "default": "llama3:latest",
          "description": "Default Ollama model to use"
        },
        "auto-coder-companion.chromaDbPath": {
          "type": "string",
          "default": "",
          "description": "Path to ChromaDB storage (leave empty for default)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}
