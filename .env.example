# CSE-Icon AutoCoder Development Environment Configuration
# Copy this file to .env and customize the values for your local development

# ===================================================================
# PORT CONFIGURATION
# ===================================================================

# Vite Development Server Port
# The port where the frontend development server will run
# If this port is busy, the system will automatically find the next available port
# Default: 3000 (will try 3001, 3002, etc. if busy)
VITE_DEV_PORT=3000

# Port Range for Automatic Detection
# When the preferred port is busy, the system will try ports in this range
# Format: start-end (e.g., 3000-3010)
VITE_PORT_RANGE=3000-3010

# Tauri Development URL
# This will be automatically set based on the detected Vite port
# Generally, you don't need to modify this unless using a custom setup
# TAURI_DEV_URL=http://localhost:3000

# ===================================================================
# EXTERNAL SERVICE PORTS
# ===================================================================

# Ollama API Port (usually runs on 11434)
OLLAMA_PORT=11434

# SearXNG Port (if running locally)
SEARXNG_PORT=8080

# ChromaDB Port (if running locally)
CHROMADB_PORT=8000

# ===================================================================
# DEVELOPMENT OPTIONS
# ===================================================================

# Enable automatic port detection
# Set to false to use strict port mode (will fail if port is busy)
AUTO_PORT_DETECTION=true

# Enable verbose logging for port detection
PORT_DEBUG=false

# Timeout for port availability checks (in milliseconds)
PORT_CHECK_TIMEOUT=5000

# ===================================================================
# ADVANCED CONFIGURATION
# ===================================================================

# Custom host for development server
# Default: localhost (use 0.0.0.0 to allow external connections)
DEV_HOST=localhost

# Enable HTTPS in development (requires certificates)
DEV_HTTPS=false

# Maximum number of port retry attempts
MAX_PORT_RETRIES=10